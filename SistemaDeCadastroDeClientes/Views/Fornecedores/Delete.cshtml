@model SistemaDeCadastroDeClientes.Models.Fornecedor

@{
    ViewData["Title"] = "Deletar Fornecedor";

    var caminho = Model?.CaminhoDaFoto;
    var imgSrc = string.IsNullOrEmpty(caminho)
        ? Url.Content("~/uploads/fotos_fornecedores/foto-de-perfil-padrao.png")
        : Url.Content(caminho.StartsWith("~") ? caminho : "~/" + caminho.TrimStart('/'));
}

<h2 class="mb-4 text-danger">Excluir Fornecedor</h2>

<div class="alert alert-danger" role="alert">
    <strong>Atenção!</strong> Você está prestes a excluir este fornecedor. Esta ação não poderá ser desfeita.
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row">
            <!-- Coluna dos dados -->
            <div class="col-md-8">
                <h5 class="card-title mb-3">Confirme os dados antes de excluir:</h5>
                <dl class="row">
                    <dt class="col-sm-3">Nome</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Nome)</dd>

                    <dt class="col-sm-3">CNPJ</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Cnpj)</dd>

                    <dt class="col-sm-3">Segmento</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Segmento)</dd>

                    <dt class="col-sm-3">CEP</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Cep)</dd>

                    <dt class="col-sm-3">Endereço</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Endereco)</dd>
                </dl>
            </div>

            <!-- Coluna da foto -->
            <div class="col-md-4 d-flex flex-column align-items-center justify-content-start">
                <h6 class="mb-3 w-100 text-center">Foto</h6>

                <a href="@imgSrc" target="_blank" rel="noopener noreferrer" class="text-center">
                    <img src="@imgSrc" alt="Foto de @Html.Encode(Model?.Nome)" class="rounded mb-2" style="max-width: 180px; height: auto;" />
                </a>

                @if (string.IsNullOrEmpty(Model?.CaminhoDaFoto))
                {
                    <small class="text-muted">— sem foto —</small>
                }
            </div>
        </div>

        <hr class="my-4" />

        <!-- Botões de ação -->
        <form asp-action="Delete" method="post" class="d-flex align-items-center gap-3">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger px-4" />
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
        </form>
    </div>
</div>

